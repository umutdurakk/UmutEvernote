@using MyEvernote.BusinessLayer
@using MyEvernote.Entities
@{
    CategoryManager cm = new CategoryManager();
    List<Category> list = cm.List();
}
<style>
    .thumbnail {
        height: 360px;
        background-color: #f8f8f8;
        color: #e7e7e7;
        border: 1px solid rgba(0, 0,0,0.45);
    }


    .ratings .button {
        color: #d17581;
    }

        .ratings .button:hover {
            color: #d17581;
        }

    hr {
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .caption {
        height: 175px;
    }

    .a {
        background-color: #f8f8f8;
        align-content: center;
    }

    .b {
        color: #333;
    }
    .dropdown-menu {
        background-color: #f8f8f8;
        color: slategray
    }
    .list-group-item {
        background-color: #f8f8f8;
        color: slategray
    }
</style>

<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
        @*<a href="/Home/Index" class="list-group-item "><span class="glyphicon glyphicon-arrow-right "></span>Tümü</a>*@
        <li class="dropdown">
            <a href="/Home/Index" class="list-group-item" data-toggle="dropdown" role="button"
               aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-arrow-right"></span>
                Kategoriler
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a href="/Home/Index"><span class="glyphicon glyphicon-arrow-right"></span>Tümü</a>
                </li>
                <li role="separator" class="divider"></li>
                @foreach (Category cat in list)
                {
                    @*<a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item">
                            <span class="glyphicon glyphicon-arrow-right"></span>@cat.Title
                        </a>*@
                    <li>
                        <a href="/Home/ByCategory/@cat.Id"><span class="glyphicon glyphicon-arrow-right"></span>@cat.Title</a>
                    </li>
                    <li role="separator" class="divider"></li>
                }

            </ul>
        </li>
    </ul>

</div>
