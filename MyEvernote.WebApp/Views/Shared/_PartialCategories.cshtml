@using MyEvernote.BusinessLayer
@using MyEvernote.Entities
@{
    CategoryManager cm = new CategoryManager();
    List<Category> list = cm.List();
}
<style>
    @*.thumbnail {
        height: 360px;
        background-color: #f8f8f8;
        color: #e7e7e7;
        border: 1px solid rgba(0, 0,0,0.45);
    }


    .ratings .button {
        color: #d17581;
    }

        .ratings .button:hover {
            color: #d17581;
        }

    hr {
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .caption {
        height: 175px;
    }s
    .dropdown-menu {
        background-color: #f8f8f8;
        color: slategray
    }
    .list-group-item {
        background-color: #f8f8f8;
        color: slategray
    }*@
   
</style>
<body>

    <p class="display-4">Kategoriler</p>
    <div class="list-group">
        <a href="@Url.Action("Index","Home")" class="list-group-item list-group-item-action "><i class="fa fa-th-list mr-2"></i>Tümü</a>
        @foreach (Category cat in list)
        {
            <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item list-group-item-action "><i class="fa fa-th-list mr-2"></i>@cat.Title</a>
        }




    </div>
