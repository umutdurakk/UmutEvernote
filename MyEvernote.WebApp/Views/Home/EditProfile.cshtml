@using MyEvernote.Entities
@model EvernoteUser
@{
    ViewBag.Title = "Profil Düzenle";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />


<div class="row pl-5 pt-3">
    <div class="col-md-12">
        <p class="display-4 border-bottom">
            @ViewBag.Title
        </p>
    </div>
</div>

<div class="row p-5">
    <div class="col-md-12">
        @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">

                <div class="col-md-3">
                    @Html.HiddenFor(model => model.ProfileImageFilename)
                    <img src="~/images/@Model.ProfileImageFilename" class="img-thumbnail rounded-circle mb-3" width="128" height="128" />
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="ProfileImage" name="ProfileImage">
                        <label class="custom-file-label" for="customFile">Dosya Seçiniz</label>
                    </div>
                    <div class="pl-3">
                        <i class="fa fa-info-circle mr-2"></i>
                        <small><i>Lütfen jpg, jpeg ya da png formatı kullanın.</i></small>
                    </div>
                </div>

                <div class="col-md-5">

                    @Html.ValidationSummary(false)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-3" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-3" })
                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-3" })
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-3" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-9", type = "password" } })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-3" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12 text-right pr-0">
                            @Html.ActionLink("İptal", "ShowProfile", "Home", null, new { @class = "btn btn-secondary" })
                            <input type="submit" value="Kaydet" class="btn btn-success" />
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>