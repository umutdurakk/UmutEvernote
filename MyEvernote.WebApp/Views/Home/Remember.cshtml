@model MyEvernote.Entities.EvernoteUser



@{
    ViewBag.Title = "MyEvernote - Kayıt Sayfası";
}

<style>
    .vertical-strech {
        height: 92.4vh;
    }

    .validation-summary-valid {
    }

    .validation-summary-errors {
    }
</style>

<link href="~/Content/validation-summary.css" rel="stylesheet" />

<div class="row mr-0">
    <div class="col-md-12 p-0">
        <section class="login-block p-4 vertical-strech">

            <div class="row">
                <div class="col-md-4 login-sec">
                    <h2>Üye Ol</h2>
                    @using (Html.BeginForm())
                    {
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.Email, new { placeholder = "lütfen e-posta adresinizi giriniz", @class = "form-control" })
                        </div>      
                        <div class="form-check">   
                            <button type="submit" class="btn btn-login float-left">Gönder</button>
                            <a href="/Home/Login" class="btn btn-login float-left ml-5">Geri Dön</a>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group mt-4">
                            <div class="col-md-12">
                                @Html.ValidationSummary(false)
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-8 banner-sec">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <img class="d-block img-fluid" src="~/NoteImages/Carousel.jpg" alt="First slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <div class="banner-text">
                                        <h2>This is Heaven</h2>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation</p>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="~/NoteImages/Gamar.jpg" alt="First slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <div class="banner-text">
                                        <h2>This is Heaven</h2>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation</p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<link href="~/Content/new-login-style.css" rel="stylesheet" />