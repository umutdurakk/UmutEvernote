@using MyEvernote.Entities
@model Note
@{
    ViewBag.Title = "NoteSh";
   
}

<head>
    <style>
        .thumbnail {
            height: 360px;
        }

        .ratings .button {
            color: #d17581;
        }

            .ratings .button:hover {
                color: #d17581;
            }

        hr {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .caption {
            height: 175px;
        }

        .bodyaa {
            background-color: rgba(0, 20, 133,1);
            color: goldenrod;
        }
    </style>
</head>

<body>
    <!-- Page Content -->
    <div class="container">
        <div class="row">

            @*Kategoriler*@
            <div class="col-md-3">
                @Html.Partial("_PartialCategories")
            </div>

            <div class="col-md-7 col-md-offset-1">
                <div class="row carousel-holder center-block">
                    <div class="col-md-12">
                        <div id="carousel-example-generic" class="carousel slide" style="min-width: 500px; height: 500px;" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>

                            </ol>
                            <div class="carousel-inner center-block">
                                <div class="item active">
                                    <img class="slide-image" src="~/NoteImages/Uranus.jpg" style="width: 1000px; height: 500px;" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="~/NoteImages/Mercury.jpg" style="width: 1000px; height: 500px;" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="~/NoteImages/Pluton.jpg" style="width: 1000px; height: 500px;" alt="">
                                </div>

                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="fa fa-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="fa fa-chevron-right"></span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <h1 class="text-center">
                        <strong>

                            @Model.Title

                        </strong>
                    </h1>
                    <h6 class="text-right">
                        <img src="~/Images/@Model.Owner.ProfileImageFilename" class="pull-right img-circle" style="width: 32px; height: 32px;" alt="Alternate Text" />
                        <span></span>@Model.Owner.Username<br />
                        <span class="fa fa-time"></span>@Model.ModifiedOn.ToString("dd.MM.yy.HH:mm")
                    </h6>

                    <br />
                    <hr />
                    <div class="text-center">

                        <h3> @Model.Text</h3>



                        @if (Model.Text.Length < 100)
                        {
                            @Html.Partial("_PartialEmpty")

                        }

                    </div>

                </div>

                <hr />


                <div class="container mt-5 mb-5">
                    <div class="d-flex justify-content-center row">
                        <div class="d-flex flex-column col-md-8">
                            <div class="coment-bottom bg-white p-2 px-4">
                                <div class="d-flex flex-row add-comment-section mt-4 mb-4">
                                    <img class="img-fluid img-responsive rounded-circle mr-2" src="" width="38">
                                    <input type="text" id="new_comment_text" class="form-control mr-3" placeholder="Add comment">
                                    <button class="btn btn-primary" onclick="doComment2(this, 'new_clicked',@Model.Id);" type="button">Comment</button>
                                </div>
                                <div class="collapsable-comment">
                                    <button class="btn btn-danger" style="height:max-content" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-1" href="#collapse-1">
                                        <span class="fa fa-arrow-down"></span><i class="fa fa-chevron-down servicedrop"></i>
                                    </button>
                                    <div id="collapse-1" class="collapse">
                                        @foreach (Comment item in Model.Comments)
                                        {

                                            <div class="commented-section mt-2" id="aa">
                                                <div class="d-flex flex-row align-items-center commented-user text-right">
                                                    @*<h5 class="mr-2"><span class="fa fa-user"></span>@item.Owner.Username</h5>
                                                        <span class="fa fa-time"></span><span class="mb-1 ml-2">@item.ModifiedOn</span>*@
                                                </div>
                                                @*<div class="text-danger text-capitalize"><span class="fa fa-comment">    @item.Text</span></div>*@
                                                <hr />

                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
    @section footer{
        @Html.Partial("_PartialFooter")
    }
    <script src="~/Scripts/comment.js"></script>
    <script src="~/Scripts/comment2.js"></script>
</body>