@model MyEvernote.Entities.Note

@{ ViewBag.Title = "Note Ekle"; }

<link href="~/Content/validation-summary.css" rel="stylesheet" />

<div class="row mt-5" align="center">
    <div class="col">
        <h2>@ViewBag.Title</h2>
        
    </div>
</div>

<div class="row container-fluid" align="center">

    <div class="col" >
        @using (Html.BeginForm("Create", "Note", FormMethod.Post, new { enctype = "multipart/form-data" }))
         {  
        @Html.AntiForgeryToken()
            
            <div class="col-md-3">
           
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="noteImage" name="noteImage">
                <label class="custom-file-label" for="customFile">Dosya Seçiniz</label>
            </div>
            <div class="pl-3">
                <i class="fa fa-info-circle mr-2"></i>
                <small><i>Lütfen jpg, jpeg ya da png formatı kullanın.</i></small>
            </div>
            </div>
           <div class="form-horizontal">     

                 @Html.ValidationSummary(false)
                 <div class="form-group">
                    <strong>
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    </strong>
                    <div class="col-md-10">
                      @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
            </div>

            <div class="form-group">
                <strong>
                    @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                </strong>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Text, 5, 30, new { @class = "form-control" })
                </div>
            </div>



            <div class="form-group">
                <strong>
                    @Html.LabelFor(model => model.IsDraft, htmlAttributes: new { @class = "control-label col-md-2" })
                </strong>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsDraft)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <strong>
                    @Html.LabelFor(model => model.CategoryId, "Kategori", htmlAttributes: new { @class = "control-label col-md-2" })
                </strong>
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    @Bootstrap.Button("success", string.Empty, "submit", "plus", " Kaydet")
                    @Bootstrap.LinkButton("/Note/Index", "default", string.Empty, string.Empty, "arrow-left", " Geri Dön!")
                </div>
            </div>
        </div>
          
         }

    </div>
</div>