@using MyEvernote.WebApp
@model IEnumerable<MyEvernote.Entities.Category>

@{
    ViewBag.Title = "Kategoriler";
}

<div class="row ml-lg-2 mr-lg-2 mt-3">
    <div class="col">
        <h2 class="text-center">Kategoriler</h2>
    </div>
</div>

<div class="row ml-lg-2 mr-lg-2">
    <div class="col">
        <p>

            <a href="/Category/Create" class="btn btn-success">
                <span class="fa fa-plus">
                </span>
            </a>
        </p>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" class="text-center">
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th scope="col" class="text-center">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th scope="col" class="text-center">
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <th scope="col" class="text-center">
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </th>
                    <th scope="col" class="text-center">
                        @Html.DisplayNameFor(model => model.ModifiedUserName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                     <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ModifiedOn)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ModifiedUserName)
                        </td>
                        <td width="210" class="text-center">
                            @Bootstrap.LinkButton("/Category/Edit/" + @item.Id, "warning", "bt-xs", "Edit", "edit", string.Empty)
                            @Bootstrap.LinkButton("/Category/Details/" + @item.Id, "info", "bt-xs", "Details", "search", string.Empty)
                            @Bootstrap.LinkButton("/Category/Delete/" + @item.Id, "danger", "bt-xs", "Delete", "trash", string.Empty)
                            @*<a href="/Category/Edit/@item.Id" class="btn btn-warning btn-sm" title="Edit">
                                <span class="fa fa-edit">
                                </span>
                            </a>
                            <a href="/Category/Details/@item.Id" class="btn btn-info btn-sm" title="Detail">
                                <span class="fa fa-search">
                                </span>
                            </a>
                            <a href="/Category/Delete/@item.Id" class="btn btn-danger btn-sm" title="Detail">
                                <span class="fa fa-trash">
                                </span>
                            </a>*@
                        </td>
                     </tr>
                }
            </tbody>
        </table>
    </div>
</div>